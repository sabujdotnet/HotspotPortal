# ============================================
# BACKEND ENVIRONMENT CONFIGURATION
# ============================================
# File: backend/.env

# Application Environment
NODE_ENV=production
PORT=3001
APP_NAME=hotspot-portal
VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=hotspot_user
DB_PASSWORD=hotspot_secure_pass_2024
DB_NAME=hotspot_portal
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20

# ============================================
# REDIS CACHE CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your_very_long_random_secret_key_minimum_32_characters_long_change_this
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# ============================================
# MIKROTIK ROUTER CONFIGURATION
# ============================================
# Replace with your Mikrotik router details
MIKROTIK_HOST=192.168.1.1
MIKROTIK_USER=admin
MIKROTIK_PASS=your_mikrotik_password
MIKROTIK_API_PORT=8728
MIKROTIK_ENABLE_SSL=false
MIKROTIK_TIMEOUT=5000

# RADIUS Configuration
RADIUS_SECRET=hotspot-radius-secret-key
RADIUS_PORT=1812
RADIUS_ACCOUNTING_PORT=1813

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================

# Gmail Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM_NAME=WiFi Hotspot Portal
SMTP_FROM_EMAIL=noreply@hotspot.local
SMTP_SECURE=true

# Alternative: Office 365
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=your_email@company.com
# SMTP_PASS=your_password

# Alternative: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=SG.your_sendgrid_api_key

# ============================================
# SMS CONFIGURATION (TWILIO)
# ============================================
TWILIO_ENABLE=true
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE=+1234567890
TWILIO_MESSAGING_SERVICE_SID=

# ============================================
# PAYMENT PROCESSING (STRIPE)
# ============================================
STRIPE_ENABLE=true
STRIPE_SECRET_KEY=sk_test_4eC39HqLyjWDarhtT657shh300
STRIPE_PUBLIC_KEY=pk_test_51234567890abcdefghijklmnop
STRIPE_WEBHOOK_SECRET=whsec_test_abc123def456ghi789jkl
STRIPE_CURRENCY=usd
STRIPE_API_VERSION=2023-10-16

# ============================================
# APPLICATION URLS
# ============================================
APP_URL=http://localhost:3000
PORTAL_URL=http://localhost:8080
ADMIN_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://payment:3001

# ============================================
# SECURITY SETTINGS
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:3001
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=1m

# ============================================
# HOTSPOT SETTINGS
# ============================================
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=3
DEFAULT_BANDWIDTH_GB=5
MAX_BANDWIDTH_GB=100
VOUCHER_VALIDITY_DAYS=30
ACCOUNT_EXPIRY_WARNING_DAYS=7

# ============================================
# NOTIFICATION SETTINGS
# ============================================
SEND_WELCOME_EMAIL=true
SEND_PAYMENT_EMAIL=true
SEND_EXPIRY_WARNING=true
EXPIRY_WARNING_DAYS=7
ENABLE_SMS_NOTIFICATIONS=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/hotspot/api.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10

# ============================================
# ADMIN SETTINGS
# ============================================
ADMIN_EMAIL=admin@hotspot.local
SUPPORT_EMAIL=support@hotspot.local
SUPPORT_PHONE=+1-800-HOTSPOT
ADMIN_NOTIFY_THRESHOLD=1000

# ============================================
# STORAGE & BACKUP
# ============================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_TIME=02:00
BACKUP_RETENTION_DAYS=30

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_MIKROTIK=true
ENABLE_RADIUS=false
ENABLE_PAYMENTS=true
ENABLE_SMS=true
ENABLE_EMAIL=true
ENABLE_ANALYTICS=false
ENABLE_API_DOCS=true

# ============================================
# ADVANCED SETTINGS
# ============================================
NODE_TLS_REJECT_UNAUTHORIZED=1
IGNORE_HTTPS_WARNING=false
DEBUG_MODE=false
DEVELOPMENT_MODE=false

