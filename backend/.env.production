# ============================================
# PRODUCTION DEPLOYMENT EXAMPLE
# ============================================
# File: backend/.env.production

NODE_ENV=production
PORT=3001
APP_NAME=hotspot-portal-prod

# Database (Production)
DB_HOST=prod-database.rds.amazonaws.com
DB_PORT=5432
DB_USER=hotspot_prod_user
DB_PASSWORD=12345678 //change this 
DB_NAME=hotspot_portal_prod
DB_SSL=true
DB_POOL_MIN=5
DB_POOL_MAX=50

# Redis (Production - Cluster)
REDIS_URL=redis://redis-cluster-endpoint:6379
REDIS_PASSWORD=CHANGE_THIS

# JWT
JWT_SECRET=GENERATE_STRONG_RANDOM_STRING_32_CHARS_MINIMUM

# Mikrotik (Production)
MIKROTIK_HOST=10.10.10.1
MIKROTIK_USER=api-hotspot
MIKROTIK_PASS=STRONG_PASSWORD

# SMTP (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.YOUR_SENDGRID_API_KEY

# Twilio (Production)
TWILIO_ACCOUNT_SID=PRODUCTION_SID
TWILIO_AUTH_TOKEN=PRODUCTION_TOKEN
TWILIO_PHONE=+15551234567

# Stripe (Production)
STRIPE_SECRET_KEY=sk_live_your_live_key
STRIPE_PUBLIC_KEY=pk_live_your_live_key
STRIPE_WEBHOOK_SECRET=whsec_live_your_secret

# URLs (Production)
APP_URL=https://admin.yourdomain.com
PORTAL_URL=https://hotspot.yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# CORS (Production)
CORS_ORIGIN=https://admin.yourdomain.com,https://hotspot.yourdomain.com

# Security
NODE_TLS_REJECT_UNAUTHORIZED=1
IGNORE_HTTPS_WARNING=false
DEBUG_MODE=false
DEVELOPMENT_MODE=false
